{
    "compilerOptions": {
        "experimentalDecorators": true,
        "target": "ES2020",
        "module": "es2020",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "sourceMap": true,
        "outDir": "./compiled",
        "moduleResolution": "node"
    },
    "include": [
        "src/*",
        "src/dataHandler/*"
    ],
    "exclude": [
        "icons",
        "node_modules",
        "compiled",
        ".vscode"
    ],
    "lib": [
        "es2020"
    ],
    "target-engines": [
        "dom.firefox.46+"
    ]
}