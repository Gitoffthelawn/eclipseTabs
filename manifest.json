{
    "manifest_version": 2,
    "name": "eclipseTab",
    "version": "1.0.9",
    "developer": {
        "name": "UniversumGames",
        "url": "https://universegame.de/"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "eclipseTab@universegame.de"
        }
    },
    "homepage_url": "https://universegame.de",
    "description": "Easy management of your tabs and own bookmark system",
    "icons": {
        "48": "icons/eclipse_48.png"
    },
    "permissions": ["storage", "<all_urls>", "tabs", "tabHide", "contextMenus", "bookmarks"],
    "sidebar_action": {
        "default_title": "eclipseTab",
        "default_panel": "pages/sidebar.html",
        "default_icon": "icons/eclipse_126.png",
        "open_at_install": true
    },
    "options_ui": {
        "page": "pages/options.html"
    },
    "web_accessible_resources": ["/icons/*", "/icons/light/*", "/icons/dark/*", "/pages/howToImgs/*.png"]
}
