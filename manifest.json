{
    "manifest_version": 2,
    "name": "eclipseTab",
    "version": "1.3.1",
    "developer": {
        "name": "UniversumGames",
        "url": "https://universegame.de/"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "eclipseTab@universegame.de",
            "strict_min_version": "80.0"
        }
    },
    "homepage_url": "https://universegame.de",
    "description": "Simple bookmark tool to easily open and manage tabs",
    "icons": {
        "48": "dist/icons/eclipse_48.png",
        "126": "dist/icons/eclipse_126.png",
        "96": "dist/icons/eclipse.svg"
    },
    "permissions": ["storage", "tabs", "tabHide", "contextMenus", "bookmarks"],
    "sidebar_action": {
        "default_title": "eclipseTab",
        "default_panel": "dist/index.html#/",
        "default_icon": "dist/icons/eclipse_126.png",
        "open_at_install": true
    },
    "options_ui": {
        "page": "dist/index.html#/settings"
    },
    "web_accessible_resources": ["/dist/icons/*", "/dist/icons/light/*", "/dist/icons/dark/*", "/dist/pages/howToImgs/*.png"]
}
